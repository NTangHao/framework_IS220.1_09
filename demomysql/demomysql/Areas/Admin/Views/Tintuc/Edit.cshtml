@model demomysql.Models.Tintuc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}

<h1>Edit</h1>

<h4>Tintuc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Tintuc" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Matintuc" />
            <div class="form-group">
                <label asp-for="Manguoidung" class="control-label"></label>
                <select asp-for="Manguoidung" class="form-control" asp-items="ViewBag.Manguoidung"></select>
                <span asp-validation-for="Manguoidung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tieude" class="control-label"></label>
                <input asp-for="Tieude" class="form-control" />
                <span asp-validation-for="Tieude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Noidung" class="control-label"></label>
                <input asp-for="Noidung" class="form-control" />
                <span asp-validation-for="Noidung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngaydang" class="control-label"></label>
                <input asp-for="Ngaydang" class="form-control" />
                <span asp-validation-for="Ngaydang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngaysua" class="control-label"></label>
                <input asp-for="Ngaysua" class="form-control" />
                <span asp-validation-for="Ngaysua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinhanh" class="control-label"></label>
                <input asp-for="Hinhanh" type="file" class="form-control-file" />
                <span asp-validation-for="Hinhanh" class="text-danger"></span>
                <img width="200" height="200" src="~/images/tintucs/@Model.Hinhanh" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

