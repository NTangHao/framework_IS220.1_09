@model IEnumerable<demomysql.Models.Thuonghieu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tenthuonghieu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tenthuonghieu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Mathuonghieu" class="btn btn-primary">Thêm</a> 
                <a asp-action="Details" asp-route-id="@item.Mathuonghieu" class="btn btn-success">Chi tiết</a> 
                <a asp-action="Delete" asp-route-id="@item.Mathuonghieu" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
