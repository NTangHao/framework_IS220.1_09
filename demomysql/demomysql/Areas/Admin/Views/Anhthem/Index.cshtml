@model IEnumerable<demomysql.Models.Anhthem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Linkanh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngaytao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaspNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img width="200" height="200" src="~/images/hinhanhthems/@item.Linkanh" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaytao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaspNavigation.Masp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Maanh">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Maanh">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Maanh">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
