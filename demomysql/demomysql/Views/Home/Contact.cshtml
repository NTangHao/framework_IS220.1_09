@model demomysql.Models.Contact
@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Liên Hệ</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Liên Hệ</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Begin Shipping Area -->
    <div class="shipping-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="shipping-item">
                        <div class="shipping-img">
                            <img src="~/assets/images/shipping/icon/plane.png" alt="Shipping Icon">
                        </div>
                        <div class="shipping-content">
                            <h5 class="title">Miễn Phí Vận Chuyển</h5>
                            <p class="short-desc mb-0">Miễn phí vận chuyển toàn quốc</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 pt-6 pt-md-0">
                    <div class="shipping-item">
                        <div class="shipping-img">
                            <img src="~/assets/images/shipping/icon/earphones.png" alt="Shipping Icon">
                        </div>
                        <div class="shipping-content">
                            <h5 class="title">Hỗ Trợ Online</h5>
                            <p class="short-desc mb-0">24/7 Tư vấn hỗ trợ online</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                    <div class="shipping-item">
                        <div class="shipping-img">
                            <img src="~/assets/images/shipping/icon/shield.png" alt="Shipping Icon">
                        </div>
                        <div class="shipping-content">
                            <h5 class="title">Bảo Mật An Toàn</h5>
                            <p class="short-desc mb-0">Bảo mật dịch vụ thanh toán online</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Shipping Area End Here -->

    <div class="contact-with-map">
        <div class="contact-map">
            <iframe class="contact-map-size" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.0594610496332!2d106.68203211468402!3d10.806757961588383!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175298b47c7b757%3A0x4d67629c8d09384e!2sHotgear.vn!5e0!3m2!1sen!2s!4v1639842826806!5m2!1sen!2s" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <div class="contact-form-area section-space-bottom-100">
            <div class="container">
                <div class="contact-form-wrap">
                    <form asp-controller="Home" asp-action="Contact" class="contact-form" method="post">
                        <h4 class="contact-form-title pb-2 mb-7">Gửi tin nhắn</h4>
                        <div class="form-field">
                            <input type="text" asp-for="Hoten" placeholder="Họ tên*" class="input-field">
                        </div>
                        <span asp-validation-for="Hoten" class="text-danger"></span>
                        <div class="form-field mt-6">
                            <input type="text" asp-for="Email" placeholder="Email*" class="input-field">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="form-field mt-6">
                            <textarea asp-for="Noidung" placeholder="Tin nhắn" class="textarea-field"></textarea>
                        </div>
                        <span asp-validation-for="Noidung" class="text-danger"></span>
                        <div class="button-wrap mt-8">
                            <button type="submit" value="submit" class="btn btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0" name="submit">GỬI TIN NHẮN</button>
                        </div>
                        <p class="form-messege mt-3 mb-0"></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->
