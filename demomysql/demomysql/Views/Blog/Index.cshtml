@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<demomysql.Models.Tintuc>

@{
    ViewData["Title"] = "Blog -"+ ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int PageCurrent = ViewBag.CurrentPage;
    int PageNext = PageCurrent + 1;
}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Tin nổi bật</h2>
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Tin nổi bật</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <div class="row">
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                       
                        <div class="col-md-6">
                            <div class="blog-item">
                                <div class="blog-img img-zoom-effect">
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Matintuc">
                                        <img class="img-full" src="~/images/tintucs/@item.Hinhanh" alt="@item.Tieude">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <div class="blog-meta text-dim-gray pb-3">
                                        <ul>
                                            <li class="date"><i class="fa fa-calendar-o me-2"></i>@item.Ngaydang.Value.ToShortDateString()</li>
                                            <li>
                                                <span class="comments me-3">
                                                    <a href="javascript:void(0)">2 Comments</a>
                                                </span>
                                                <span class="link-share">
                                                    <a href="javascript:void(0)">Share</a>
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                    <h5 class="title mb-4">
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Matintuc">@item.Tieude</a>
                                    </h5>
                                    <p class="short-desc mb-5">@item.Motangan.</p>
                                    <div class="button-wrap">
                                        <a class="btn btn-custom-size lg-size btn-dark rounded-0"asp-controller="Blog" asp-action="Details" asp-route-id="@item.Matintuc">Xem thêm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }


                <div class="col-lg-12">
                    <div class="pagination-area pt-10">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                @if (PageCurrent > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Blog" asp-action="Index" asp-route-page="@(PageCurrent-1)" aria-label="Previous">
                                            <span class="fa fa-chevron-left"></span>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Blog" asp-action="Index"  aria-label="Previous">
                                            <span class="fa fa-chevron-left"></span>
                                        </a>
                                    </li>
                                }

                                <li class="page-item active"><a class="page-link"asp-controller="Blog" asp-action="Index" asp-route-page="@PageCurrent">@PageCurrent</a></li>
                                <li class="page-item"><a class="page-link" asp-controller="Blog" asp-action="Index" asp-route-page="@PageNext">@PageNext</a></li>
                                <li class="page-item">
                                    <a class="page-link" asp-controller="Blog" asp-action="Index" asp-route-page="@PageNext" aria-label="Next">
                                        <span class="fa fa-chevron-right"></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->
