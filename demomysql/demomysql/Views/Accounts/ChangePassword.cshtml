

@{ 
    Nguoidung capnhat = ViewBag.capnhat;
}

@model demomysql.ModelViews.ChangePasswordViewModel
<form asp-controller="Accounts" asp-action="ChangePassword" method="post" class="myaccount-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="myaccount-form-inner">
        
        <div class="single-input">
            <label>
                Mật khẩu hiện tại
            </label>
            <input asp-for="PasswordNow" type="password" />
            <span asp-validation-for="PasswordNow" class="text-danger"></span>
        </div>
        <div class="single-input">
            <label>
                Mật khẩu mới
            </label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="single-input">
            <label>Xác nhận lại mật khẩu</label>
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="single-input">
            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                <span>Lưu thay đổi</span>
            </button>
        
        </div>
    </div>
</form>